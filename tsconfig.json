{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "pretty": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "lib", "scripts", "**/*.stories.tsx", "**/*.spec.ts", "**/*.test.ts"]
}
